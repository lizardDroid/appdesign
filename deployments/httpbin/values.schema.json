{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": { "type": "integer", "minimum": 1 },
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "tag": { "type": "string", "minLength": 1 },
        "digest": { "type": "string" },
        "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] }
      },
      "required": ["repository", "tag"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"] },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": { "type": "string", "minLength": 1 },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": { "type": "string" },
                    "pathType": { "type": "string", "enum": ["ImplementationSpecific", "Prefix", "Exact"] }
                  },
                  "required": ["path", "pathType"]
                }
              }
            },
            "required": ["host", "paths"]
          }
        },
        "tls": { "type": "array" }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": { "type": "object" },
        "requests": { "type": "object" }
      }
    },
    "podSecurityContext": { "type": "object" },
    "securityContext": { "type": "object" },
    "tmpDir": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "medium": { "type": "string" }
      }
    },
    "topologySpread": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "maxSkew": { "type": "integer", "minimum": 1 },
        "whenUnsatisfiable": { "type": "string", "enum": ["DoNotSchedule", "ScheduleAnyway"] },
        "topologyKey": { "type": "string" }
      }
    },
    "podAntiAffinity": { "type": "string", "enum": ["required", "preferred", "off"] },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minAvailable": { "type": "integer", "minimum": 0 }
      }
    },
    "hpa": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetCPUUtilizationPercentage": { "type": "integer", "minimum": 1, "maximum": 100 }
      }
    },
    "nodeSelector": { "type": "object" },
    "tolerations": { "type": "array" },
    "affinity": { "type": "object" },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "defaultDenyEgress": { "type": "boolean" },
        "allowDNS": { "type": "boolean" },
        "additionalEgressRules": { "type": "array" }
      }
    },
    "readiness": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 }
      }
    },
    "liveness": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 }
      }
    },
    "startup": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "path": { "type": "string" },
        "failureThreshold": { "type": "integer", "minimum": 1 },
        "periodSeconds": { "type": "integer", "minimum": 1 }
      }
    },
    "rollout": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "stableServiceName": { "type": "string" },
        "canaryServiceName": { "type": "string" },
        "trafficRouting": { "type": "object" },
        "steps": { "type": "array" },
        "analysis": { "type": "object" }
      }
    },
    "useDeploymentFallback": { "type": "boolean" }
  },
  "additionalProperties": true
}


